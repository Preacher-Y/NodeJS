<!DOCTYPE html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Projects – Jane Developer</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
      /* Reuse portfolio theme variables */
      :root {
        --bg: #ffffff;
        --text: #1f2937;
        --muted: #6b7280;
        --card: #f8fafc;
        --border: #e5e7eb;
        --accent: #2563eb;
        --accent-contrast: #ffffff;
        --shadow: 0 10px 20px rgba(0,0,0,0.06), 0 6px 6px rgba(0,0,0,0.08);
      }
      [data-theme="dark"] {
        --bg: #0b1220;
        --text: #e5e7eb;
        --muted: #94a3b8;
        --card: #0f172a;
        --border: #1f2937;
        --accent: #60a5fa;
        --accent-contrast: #0b1220;
        --shadow: 0 10px 20px rgba(0,0,0,0.35), 0 6px 6px rgba(0,0,0,0.25);
      }

      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        background: var(--bg);
        color: var(--text);
      }
      header, footer {
        border-bottom: 1px solid var(--border);
        border-top: 1px solid var(--border);
        padding: 1rem;
        text-align: center;
      }
      .container {
        width: min(1100px, 92%);
        margin: 2rem auto;
      }
      h1 {
        text-align: center;
        margin-bottom: 1.5rem;
      }
      .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1rem;
      }
      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 1rem;
        padding: 1rem;
        box-shadow: var(--shadow);
      }
      .card h2 {
        margin-top: 0;
      }
      .pill {
        display: inline-block;
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: 999px;
        padding: 0.2rem 0.6rem;
        font-size: 0.8rem;
        margin-right: 0.4rem;
        color: var(--muted);
      }
      .back-link {
        display: inline-block;
        margin-top: 1.5rem;
        text-decoration: none;
        color: var(--accent);
        font-weight: bold;
      }
      .back-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <header>
      <a href="/" class="back-link">← Back to Home</a>
    </header>

    <main style="height: 80vh;" class="container">
      <h1>My Projects</h1>
      <div class="card-grid">

        <% if(projects.length > 0){ %>
            <% projects.map(el=>{%>
              <article ondblclick="deleteProject(`<%=el.title%>`)" onclick="getProject(`<%=el.title%>`)" class="card">
                <h3><%= el.title %></h3>
                <p><%= el.description %></p>

                <div class="tag-row">

                  <% el.tools.map(el=>{ %>
                    <span class="pill"><%= el %></span>
                  <% }) %>

                </div>

              </article>
            <%})%>
          <% }else{ %>
              <p style="color: #1f2937; text-align: center;">Zero Projects Available</p>
          <% } %>
      </div>
      <a href="/add-project" 
          style="
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-left: 43.5%;
            margin-top: 30px;
            text-align: center;
            background-color:#5282e8;
            color:#200352;
            padding:12px 24px;
            font-size:16px;
            font-weight:600;
            border:none;
            border-radius:12px;
            cursor:pointer;
            box-shadow:0 4px 8px rgba(0,0,0,0.1);
            text-decoration: none;
          "
        >
          <span style="font-size: 18px;">+</span> Add Project
        </a>
    </main>

    <footer style="margin-top: 100px;">
      <p>© <span id="year"></span> Yves Developer</p>
    </footer>

    <script>
      // Theme persistence (same logic as index.html)
      (function initTheme() {
        const saved = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const initial = saved || (prefersDark ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', initial);
      })();

      async function deleteProject(title){
        const res = await fetch(`/${title}`, {method:'DELETE'});
        if(res.ok) location.reload();
        else alert('Failed to delete project');
      }

      async function getProject(title) {
        window.location.href = `/project/${title}`;
      }

      document.getElementById('year').textContent = new Date().getFullYear();
    </script>
  </body>
</html>
