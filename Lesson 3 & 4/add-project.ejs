<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Project â€“ Developer Portfolio</title>
    <style>
        :root {
            --bg: #ffffff;
            --text: #1f2937;
            --muted: #6b7280;
            --card: #f8fafc;
            --border: #e5e7eb;
            --accent: #2563eb;
            --accent-contrast: #ffffff;
            --shadow: 0 10px 20px rgba(0,0,0,0.06), 0 6px 6px rgba(0,0,0,0.08);
        }
        [data-theme="dark"] {
            --bg: #0b1220;
            --text: #e5e7eb;
            --muted: #94a3b8;
            --card: #0f172a;
            --border: #1f2937;
            --accent: #60a5fa;
            --accent-contrast: #0b1220;
            --shadow: 0 10px 20px rgba(0,0,0,0.35), 0 6px 6px rgba(0,0,0,0.25);
        }

        body {
            margin: 0;
            font-family: system-ui, sans-serif;
            background: var(--bg);
            color: var(--text);
            line-height: 1.6;
        }

        .container {
            width: min(600px, 92%);
            margin: 2rem auto;
        }

        .form-card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: var(--shadow);
        }

        h1 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: var(--text);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: var(--text);
        }

        input, textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--border);
            border-radius: 0.5rem;
            background: var(--bg);
            color: var(--text);
            font-size: 1rem;
            box-sizing: border-box;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            box-shadow: var(--shadow);
        }

        .btn-primary {
            background: var(--accent);
            color: var(--accent-contrast);
        }

        .btn-secondary {
            background: transparent;
            color: var(--accent);
            border: 1px solid var(--border);
        }

        .btn:hover {
            filter: brightness(1.05);
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .help-text {
            font-size: 0.875rem;
            color: var(--muted);
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <div class="container" id="container">
        <div class="form-card">
            <h1>Add New Project</h1>
            
            <form action="/add-project" method="POST">
                <div class="form-group">
                    <label for="title">Project Title</label>
                    <input type="text" id="title" name="title" required>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="tools">Tools/Skills</label>
                    <input type="text" id="tools" name="tools" placeholder="React, Node.js, MongoDB">
                    <div class="help-text">Separate multiple tools with commas</div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add Project</button>
                    <a href="/project" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Theme persistence
        (function initTheme() {
            const saved = localStorage.getItem('theme');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const initial = saved || (prefersDark ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', initial);
        })();
        document.body.addEventListener('click',()=>{
            window.location.href='/project';
        })
        document.getElementById('container').addEventListener('click',(e)=>{
            e.stopPropagation();
        })
    </script>
</body>
</html>